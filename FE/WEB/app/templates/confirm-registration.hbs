<div class="app-container">
  <div class="h-100">
    <div class="h-100 no-gutters row">
      <div class="d-flex bg-white justify-content-center align-items-center col-md-12">
        <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-8 text-center">
          <div class="row">
            {{!-- logo --}}
            <div class="col-md-12">
              <div class="app-logo m-auto mb-5"></div>
            </div>
            {{!-- loader --}}
            <div class="col-md-12" style="padding-top: 60px; height: 125px;">
              {{#if (eq this.available 'waiting')}}
              <div class="d-inline-block" style="height: 60px;">
                <div class="loader">
                    <div class="ball-scale-multiple">
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                </div>        
              </div>
              {{/if}}          
            </div>
          </div>
          {{!-- esito --}}
          <div class="col-md-12">
            {{#if (eq this.available 'unavailable')}}
              <h4 class="text-danger mb-3">
                {{this.error}}
              </h4>
              {{#if this.showResend}}
                <p class="text-danger mb-5">Puoi ottenere un nuovo link via e-mail cliccando il pulsante che segue</p>
                <button class="btn btn-sm btn-danger btn-hover-shine mb-5" type="button" {{on 'click' (perform this.resend)}}>
                  Invia nuova e-mail di attivazione
                  <i class="fa ml-2 {{if this.resend.isRunning 'fa-spinner fa-spin' 'fa-location-arrow'}}"></i>
                </button>
              {{/if}}
              <p>
                <a href="/login" class="text-secondary opacity-5">torna al login</a>
              </p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{outlet}}