{{!-- PerformerCard Component Template --}}
<div class="card ofinder-shadow ofinder-rounded overflow-hidden" ...attributes>
  {{!-- Avatar Container --}}
  <div class="position-relative">
    <img
      src={{@performer.avatarUrl}}
      alt={{@performer.displayName}}
      class="card-img-top ofinder-performer-avatar"
    />

    {{!-- Badge Verified (top-right overlay) --}}
    {{#if @performer.verified}}
      <span class="ofinder-badge-verified ofinder-badge-overlay-tr">
        <i class="fas fa-check mr-1"></i>
        Verificato/a
      </span>
    {{/if}}

    {{!-- Badge Premium (top-left overlay) --}}
    {{#if @performer.isPremium}}
      <span class="ofinder-badge-premium ofinder-badge-overlay-tl">
        <i class="fas fa-star mr-1"></i>
        Premium
      </span>
    {{/if}}
  </div>

  {{!-- Card Body --}}
  <div class="card-body">
    {{!-- Nome Performer --}}
    <h5 class="ofinder-heading-md mb-1">
      {{@performer.displayName}}
    </h5>

    {{!-- Rating Stars --}}
    <div class="mb-1">
      <RatingStars
        @rating={{@performer.averageRating}}
        @reviewCount={{@performer.reviewCount}}
        @size="sm"
      />
    </div>

    {{!-- Channel Badges (Social Platforms) --}}
    {{#if @performer.channels}}
      <div class="mb-1 d-flex flex-wrap performer-channels">
        {{#each @performer.channels as |channel|}}
          <ChannelBadge @channel={{channel}} @size="sm" />
        {{/each}}
      </div>
    {{/if}}

    {{!-- Weekly Schedule Chart (for CamGirl and Performer) --}}
    {{#if this.showScheduleChart}}
      <div class="mb-2">
        <WeeklyScheduleChart @schedules={{@performer.schedules}} @height={{100}} />
      </div>
    {{/if}}

    {{!-- Descrizione breve (troncata) --}}
    {{#if this.showBio}}
      <p class="ofinder-text-sm ofinder-text-muted mb-1 performer-bio-truncated">
        {{this.truncatedBio}}
      </p>
    {{/if}}

    {{!-- Pricing --}}
    {{#if @performer.minPrice}}
      <div class="mb-0 d-flex align-items-center">
        <i class="pe-7s-wallet ofinder-text-accent mr-2"></i>
        <span class="ofinder-text-accent font-weight-bold">
          Da ${{@performer.minPrice}}/mese
        </span>
      </div>
    {{/if}}
  </div>

  {{!-- Card Footer con CTA --}}
  <div class="card-footer bg-transparent border-0">
    <button
      type="button"
      class="btn btn-block btn-ofinder-primary"
      {{on "click" this.handleViewProfile}}
    >
      Visualizza Profilo
      <i class="fa fa-arrow-right ml-2"></i>
    </button>
  </div>
</div>
