<div {{did-update this.start @recordWeb @recordApp @serviceAvailable}} ...attributes>
  {{#if (and (eq this.serviceAvailable 'available') (or (has-permissions 'isSuperAdmin') (has-permissions 'isDeveloper')))}}
  <div>
    <div class="row underline">
      <div class="col-md-12 mb-5">
        <div class="alert alert-primary fade show" role="alert">
            <b>NOTA:</b> le modifiche avranno effetto solo dopo la pressione del pulsante di salvataggio a fondo pagina.
        </div>
      </div>
    </div>

    <div class="row underline">
      {{!-- header fissa --}}
      <div class="col-md-3 p-3">
        <label>Header fissa?</label>
        <select class="form-control" {{on 'change' (fn this.changeValue 'boolean' 'both' 'fixedHeader')}}>
          <option value="" selected={{if (eq this.fixedHeader "") "selected"}}>No</option>
          <option value="1" selected={{if (eq this.fixedHeader "1") "selected"}}>Sì</option>
        </select>
      </div>
      {{!-- footer fisso --}}
      <div class="col-md-3 p-3 left-border">
        <label>Footer fisso?</label>
        <select class="form-control" {{on 'change' (fn this.changeValue 'boolean' 'both' 'fixedFooter')}}>
          <option value="" selected={{if (eq this.fixedFooter "") "selected"}}>No</option>
          <option value="1" selected={{if (eq this.fixedFooter "1") "selected"}}>Sì</option>
        </select>
      </div>
      {{!-- sidebar fissa --}}
      <div class="col-md-3 p-3 left-border">
        <label>Sidebar fissa?</label>
        <select class="form-control" {{on 'change' (fn this.changeValue 'boolean' 'both' 'fixedSidebar')}}>
          <option value="" selected={{if (eq this.fixedSidebar "") "selected"}}>No</option>
          <option value="1" selected={{if (eq this.fixedSidebar "1") "selected"}}>Sì</option>
        </select>
      </div>
      {{!-- body tabs line --}}
      <div class="col-md-3 p-3 left-border">
        <label>Body Tabs Line/Shadow?</label>
        <select class="form-control" {{on 'change' (fn this.changeValue 'boolean' 'both' 'bodyTabsLine')}}>
          <option value="1" selected={{if (eq this.bodyTabsLine "1") "selected"}}>Line</option>
          <option value="" selected={{if (eq this.bodyTabsLine "") "selected"}}>Shadow</option>
        </select>
      </div>
    </div>

    <div class="row underline">
      {{!-- schema di colori chiaro --}}
      <div class="col-md-3 p-3">
        <label>Schema di colori chiaro?</label>
        <select class="form-control" {{on 'change' (fn this.changeValue 'boolean' 'both' 'appThemeWhite')}}>
          <option value="" selected={{if (eq this.appThemeWhite "") "selected"}}>No</option>
          <option value="1" selected={{if (eq this.appThemeWhite "1") "selected"}}>Sì</option>
        </select>
      </div>
      {{!-- header shadow --}}
      <div class="col-md-3 p-3 left-border">
        <label>Header shadow?</label>
        <select class="form-control" {{on 'change' (fn this.changeValue 'boolean' 'both' 'headerShadow')}}>
          <option value="" selected={{if (eq this.headerShadow "") "selected"}}>No</option>
          <option value="1" selected={{if (eq this.headerShadow "1") "selected"}}>Sì</option>
        </select>
      </div>
      {{!-- sidebar shadow --}}
      <div class="col-md-3 p-3 left-border">
        <label>Sidebar shadow?</label>
        <select class="form-control" {{on 'change' (fn this.changeValue 'boolean' 'both' 'sidebarShadow')}}>
          <option value="" selected={{if (eq this.sidebarShadow "") "selected"}}>No</option>
          <option value="1" selected={{if (eq this.sidebarShadow "1") "selected"}}>Sì</option>
        </select>
      </div>
      {{!-- empty --}}
      <div class="col-md-3 p-3 left-border unable-box"></div>
    </div>

    <div class="row">
      <div class="col-md-4 p-3"></div>
    </div>

    <div class="row">
