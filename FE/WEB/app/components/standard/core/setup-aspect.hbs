    <div class="row underline">
      {{!-- tonalità testo nell'header --}}
      <div class="col-md-6 p-3">
        <label>Tonalità del testo nell'header?</label> {{this.headerLight}}
        <select disabled class="form-control" {{on 'change' (fn this.changeValue 'string' 'app' 'headerLight')}}>
          <option value="white" selected={{(eq this.headerLight "white")}}>Chiara</option>
          <option value="black" selected={{(eq this.headerLight "black")}}>Scura</option>
          <option value="" selected={{(eq this.headerLight "")}}>Per sfondi bianchi</option>
        </select>
      </div>
      {{!-- tonalità testo nella sidebar --}}
      <div class="col-md-6 p-3 left-border">
        <label>Tonalità del testo nella sidebar?</label> {{this.sidebarLight}}
        <select disabled class="form-control" {{on 'change' (fn this.changeValue 'string' 'app' 'sidebarLight')}}>
          <option value="white" selected={{(eq this.sidebarLight "white")}}>Chiara</option>
          <option value="black" selected={{(eq this.sidebarLight "black")}}>Scura</option>
          <option value="" selected={{(eq this.sidebarLight "")}}>Per sfondi bianchi</option>
        </select>
      </div>
    </div>

    <div class="row">
      {{!-- salvataggio --}}
      <div class="col-md-12 pt-5 text-right">
        <button class="btn btn-shadow btn-hover-shine btn btn-primary btn-lg" disabled={{this.savedChanges}} {{on "click" (perform this.save)}} type="submit">
          <i class="fa mr-2 {{if this.save.isRunning 'fa-spinner fa-spin' 'fa-save'}}"></i>
          SALVA
        </button>
      </div>
    </div>

  </div>
  {{/if}}
  {{#if (eq this.serviceAvailable 'waiting')}}
  <div class="row">
    <div class="col-md-12 text-center pt-4">
      <p>
        <em class="text-info"><i class="fa fa-spin fa-spinner"></i> attendere prego...</em>
      </p>
    </div>
  </div>
  {{/if}}
  {{#if (eq this.serviceAvailable 'unavailable')}}
  <div class="row">
    <div class="col-md-12 text-center pt-4">
      <p>
        <em class="text-danger">Il servizio non è al momento disponibile. Ricaricare la pagina!</em>
      </p>
    </div>
  </div>
  {{/if}}
</div>
{{yield}}