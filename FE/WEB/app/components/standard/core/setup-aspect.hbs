      </div>
      {{!-- colore della sidebar --}}
      <div class="col-md-6 p-3 left-border">
        <label class="mb-4">Colore della sidebar</label>
        <div class="theme-settings-swatches">
            <div class="swatch-holder bg-primary switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-primary') 'active' ''}}" data-class="bg-primary" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-secondary switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-secondary') 'active' ''}}" data-class="bg-secondary" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-success switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-success') 'active' ''}}" data-class="bg-success" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-info switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-info') 'active' ''}}" data-class="bg-info" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-warning switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-warning') 'active' ''}}" data-class="bg-warning" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-danger switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-danger') 'active' ''}}" data-class="bg-danger" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-light switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-light') 'active' ''}}" data-class="bg-light" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-dark switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-dark') 'active' ''}}" data-class="bg-dark" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-focus switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-focus') 'active' ''}}" data-class="bg-focus" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-alternate switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-alternate') 'active' ''}}" data-class="bg-alternate" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-custom1 switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-custom1') 'active' ''}}" data-class="bg-custom1" data-text-class="header-text-light"></div>
            <div class="swatch-holder bg-custom2 switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-custom2') 'active' ''}}" data-class="bg-custom2" data-text-class="header-text-light"></div>
            <div class="swatch-holder bg-white switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-white') 'active' ''}}" data-class="bg-white" data-text-class="header-text-dark"></div>

            <div class="divider"></div>
            <div class="swatch-holder bg-vicious-stance switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-vicious-stance') 'active' ''}}" data-class="bg-vicious-stance" data-text-class="sidebar-text-light"></div>
