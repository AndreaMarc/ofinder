            <div class="swatch-holder bg-night-fade switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-night-fade') 'active' ''}}" data-class="bg-night-fade" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-sunny-morning switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-sunny-morning') 'active' ''}}" data-class="bg-sunny-morning" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-tempting-azure switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-tempting-azure') 'active' ''}}" data-class="bg-tempting-azure" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-amy-crisp switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-amy-crisp') 'active' ''}}" data-class="bg-amy-crisp" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-heavy-rain switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-heavy-rain') 'active' ''}}" data-class="bg-heavy-rain" data-text-class="sidebar-text-dark"></div>
