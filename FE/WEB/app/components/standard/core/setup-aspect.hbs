            <div class="swatch-holder bg-arielle-smile switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-arielle-smile') 'active' ''}}" data-class="bg-arielle-smile" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-plum-plate switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-plum-plate') 'active' ''}}" data-class="bg-plum-plate" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-happy-fisher switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-happy-fisher') 'active' ''}}" data-class="bg-happy-fisher" data-text-class="sidebar-text-dark"></div>
            <div class="swatch-holder bg-happy-itmeo switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-happy-itmeo') 'active' ''}}" data-class="bg-happy-itmeo" data-text-class="sidebar-text-light"></div>
