            <div class="swatch-holder bg-night-sky switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-night-sky') 'active' ''}}" data-class="bg-night-sky" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-slick-carbon switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-slick-carbon') 'active' ''}}" data-class="bg-slick-carbon" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-asteroid switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-asteroid') 'active' ''}}" data-class="bg-asteroid" data-text-class="sidebar-text-light"></div>
            <div class="swatch-holder bg-royal switch-sidebar-cs-class {{if (eq this.sidebarBackground 'bg-royal') 'active' ''}}" data-class="bg-royal" data-text-class="sidebar-text-light"></div>
