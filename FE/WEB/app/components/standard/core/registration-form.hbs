    </div>
    <div class="mt-4 d-flex align-items-center">
      <h5 class="mb-0">
        <Standard::TR @key="component.registrationForm.alreadySign" @default="Già registrato?"/>
        <LinkTo @route="login" class="text-primary">
          <Standard::TR @key="component.registrationForm.signIn" @default="Accedi"/>
        </LinkTo>
      </h5>
      <div class="ml-auto">
        <button {{on 'click' this.save}} data-test-registrati class="btn-wide btn-pill btn-shadow btn-hover-shine btn btn-primary btn-lg" type="button">
          <i class="fa mr-2 {{if this.createUser.isRunning 'fa-spinner fa-spin' 'fa-save'}}"></i>
          <Standard::TR @key="component.registrationForm.signUp" @default="Registrati"/>
        </button>
      </div>
    </div>
  </form>
  {{else}}
  <div class="p-0 pt-3">
    <div class="alert alert-warning fade show m-3" role="alert">
      <i class="fa fa-exclamation-triangle"></i> <Standard::TR @key="component.registrationForm.unactiveRegistration" @default="Registrazione non attiva."/>
    </div>
  </div>
  {{/if}}
</div>
<div class="d-block d-sm-block d-md-none d-lg-none p-3"></div>