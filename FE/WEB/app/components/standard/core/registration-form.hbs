    <div class="form-row">
      {{!-- email --}}
      {{#if this.isGoogle}}
        <div class="col-md-6"></div>
      {{else}}
        <div class="col-md-6">
          <div class="position-relative form-group">
            <label for="registrationEmail">
              <span class="registration-mandatory {{if (is-empty this.newValue.email) "text-danger" "text-success"}}">*</span>
              <Standard::TR @key="component.registrationForm.email" @default="E-mail"/>
            </label>
            <input id="registrationEmail" type="email" {{on 'input' (fn this.storeNewValue 'email')}} autocomplete="off" placeholder="..." class="form-control">
            <small class="form-text text-muted">
              <Standard::TR @key="component.registrationForm.emailInfo" @default="Ti invieremo un'email per confermare l'indirizzo"/>
            </small>
          </div>
        </div>
      {{/if}}

      {{!-- email di contatto --}}
      {{#if (eq this.registrationFields.contactEmail '0')}}
      <div class="col-md-6"></div>
      {{else}}
