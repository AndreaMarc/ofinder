          </label>
          <input id="registrationContactEmail" type="email" {{on 'input' (fn this.storeNewValue 'contactEmail')}} autocomplete="off" class="form-control">
          <small class="form-text text-muted">
            <Standard::TR @key="component.registrationForm.emailContactInfo" @default="Per future comunicazioni puoi impostare un'e-mail diversa"/>
          </small>
        </div>
      </div>
      {{/if}}

